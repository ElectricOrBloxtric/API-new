<style>
    body {
        background-color: #242425;
        font-family: Arial, Helvetica, sans-serif;
    }

    .navbar {
        width: 100%;
        height: 4vw;
    }

    .banner {
        height: 4vw;
    }

    .search-container {
        background-color: #2f3640;
        position: relative;
        border-radius: 2vw;
        width: 40%;
        height: 5vw;
    }

    .search-box {
        background-color: transparent;
        outline: none;
        height: 4vw;
        font-size: 3vw;
        border: 0;
        width: 100%;
        margin-top: 0.4vw;
        color: #FFF;
    }

    .search-button {
        position: absolute;
        right: 0.5vw;
        top: 0.5vw;
        background-color: #FFF;
        border-radius: 50%;
        color: #FFF;
        width: 4vw;
        height: 4vw;
    }

    .search-icon {
        height: 70%;
        width: 70%;
    }

    .select {
        background-color: #2f3640;
        width: 15%;
        height: 3vw;
        font-size: 2vw;
        text-align: center;
        color: #FFF;
        margin-left: 20vw;
    }

    .main {
        background-color: #000;
        width: 90%;
        height: 15vw;
        margin-top: 2vw;
        text-align: left;
    }

    .profile {
        float: left;
        height: 15vw;
        width: 15vw;
    }

    .name {
        color: #FFF;
        font-size: 3vw;
    }

    .stats {
        display: grid; 
        grid-template-columns: repeat(3, 1fr);
        text-align: center;
    }
    
    .stat_title {
        color: #FFF;
        font-size: 2.9vw;
        margin-top: 0.5vw;
        margin-left: 0.5vw;
    }

    .stat_value {
        color: #FFF;
        font-size: 2.9vw;
        margin-top: 0.5vw;
        margin-left: 0.5vw;
    }

    .daily_stats {
        background-color: #000;
        width: 90%;
        margin-top: 2vw;
        text-align: left;
        color: #FFF;
    }

    th {
        font-size: 1.5vw;
        color: #FFF;
    }

    td {
        font-size: 1.5vw;
        color: #FFF;
    }
</style>