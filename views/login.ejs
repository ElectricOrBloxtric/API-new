<input id="code" type="text" placeholder="code"><button onclick="check()">Check</button>

<script>
    function check() {
        fetch('/check/code/' + document.getElementById('code').value + '', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        }).then(function (response) {
            return response.text();
        }).then(function (data) {
            if (data == 'true') {
                window.location.href = '/';
            } else if (data == 'false') {
                alert('Code is not correct');
            } else {
                alert('Wait 15 minutes');
            }
        })
    }
</script>